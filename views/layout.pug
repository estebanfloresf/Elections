doctype html
html
    head

        title= `${title} | ${h.siteName}`

        link(rel='stylesheet', href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" , integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" , crossorigin="anonymous")
        //link(rel='stylesheet', href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" , integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" , crossorigin="anonymous")
        link(rel='stylesheet', href="https://fonts.googleapis.com/css?family=Abel" type='text/css')
        link(rel='stylesheet', href='/dist/style.css')

    body
        nav.navbar.navbar-inverse.navbar-fixed-top
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') #{h.siteName}
                #navbar.navbar-collapse.collapse
                    ul.nav.navbar-nav.navbar-right
                        each item in h.menu
                            li.nav__item
                                a.nav__link(href=item.slug, class=(currentPath.startsWith(item.slug) ? 'nav__link--active' : ''))
                                    //img(src=`./images/icons/${item.icon}.svg` style="width:30px; height:15px")
                                    //!= h.icon(item.icon
                                    span.glyphicon
                                        img(src=`./images/icons/${item.icon}.svg` style="width:30px; height:15px")
                                    span #{item.title}
                    form.navbar-form.navbar-right
                        input.form-control(type='text', placeholder='Search...')


        div.container
            div.starter-template

                block messages
                    if locals.flashes
                        .inner
                            .flash-messages
                                - const categories = Object.keys(locals.flashes)
                                - const defaultoption = 'warning'
                                each category in categories
                                    each message in flashes[category]

                                        //if category.contain('success','warning','info','danger')
                                        //    pre= h.dump(flashes[category])


                                        .alert(class=`alert alert-dismissible alert-${category} ` role="alert")
                                            button.close(type="button", data-dismiss="alert", aria-label="Close" onClick="this.parentElement.remove()") &times;

                                            p!= message
                                            //button.flash__remove(onClick="this.parentElement.remove()") &times;

                block content

        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
