body
    nav.my-navbar.navbar.navbar-expand-md.fixed-top
          
        a.navbar-brand(href='/')
            span
                img(alt='Brand', src='../images/photos/logo.png' width="20px" height="10px")
            |  #{h.siteName}
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar

        #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-right
                    
                    each item in h.menu
                        li
                            a(href=item.slug, class=(currentPath.startsWith(item.slug) ? 'active' : ''))

                                
                                img.svg(src=`../images/icons/${item.icon}.svg` style="width:30px; height:15px")

                                span #{item.title}
            

    nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
        a.navbar-brand(href='#') Navbar
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarsExampleDefault.collapse.navbar-collapse
            ul.navbar-nav.mr-auto
                li.nav-item.active
                    a.nav-link(href='#')
                    | Home 
                    span.sr-only (current)
                li.nav-item
                    a.nav-link(href='#') Link
                li.nav-item
                    a.nav-link.disabled(href='#') Disabled
                li.nav-item.dropdown
                    a#dropdown01.nav-link.dropdown-toggle(href='http://example.com', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Dropdown
                    .dropdown-menu(aria-labelledby='dropdown01')
                    a.dropdown-item(href='#') Action
                    a.dropdown-item(href='#') Another action
                    a.dropdown-item(href='#') Something else here
            form.form-inline.my-2.my-lg-0
            input.form-control.mr-sm-2(type='text', placeholder='Search', aria-label='Search')
            button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search

    div.container
        div.starter-template

            block messages
                if locals.flashes
                    .inner
                        .flash-messages
                            - const categories = Object.keys(locals.flashes)
                            - const defaultoption = 'warning'
                            each category in categories
                                each message in flashes[category]

                                    //if category.contain('success','warning','info','danger')
                                    //    pre= h.dump(flashes[category])


                                    .alert(class="alert alert-dismissible alert-#{category}" role="alert")
                                        button.close(type="button", data-dismiss="alert", aria-label="Close" onClick="this.parentElement.remove()") &times;

                                        p!= message
                                        //button.flash__remove(onClick="this.parentElement.remove()") &times;

            block content





